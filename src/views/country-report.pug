include navbar 
doctype html 
html
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    style
      include ../styles/main.css
    title Pioneers | #{country.name} 
  body.page  
    header
    section
      img(src=`https://flagcdn.com/w160/${country.countryCodeAlpha2.toLowerCase()}.png`)
      h2.logo--hover #{country.name}
      p.text-block.text-block__paragraph.text-block__paragraph--align-left Name: #{country.name}
      p.text-block.text-block__paragraph.text-block__paragraph--align-left Country Code Alpha-2: #{country.countryCodeAlpha2}
      p.text-block.text-block__paragraph.text-block__paragraph--align-left Country Code Alpha-3: #{country.countryCodeAlpha3}
      p.text-block.text-block__paragraph.text-block__paragraph--align-left Continent: #{country.continent}
      p.text-block.text-block__paragraph.text-block__paragraph--align-left Region: #{country.region}
      p.text-block.text-block__paragraph.text-block__paragraph--align-left Surface Area: #{country.surfaceArea}
      p.text-block.text-block__paragraph.text-block__paragraph--align-left Indep Year: #{country.indepYear}
      p.text-block.text-block__paragraph.text-block__paragraph--align-left Population: #{country.population}
      p.text-block.text-block__paragraph.text-block__paragraph--align-left Life Expectancy: #{country.lifeExpectancy}
      p.text-block.text-block__paragraph.text-block__paragraph--align-left GNP: #{country.GNP}
      p.text-block.text-block__paragraph.text-block__paragraph--align-left GNPOld: #{country.GNPOld}
      p.text-block.text-block__paragraph.text-block__paragraph--align-left Local Name: #{country.localName}
      p.text-block.text-block__paragraph.text-block__paragraph--align-left Government Form: #{country.governmentForm}
      p.text-block.text-block__paragraph.text-block__paragraph--align-left Head of State: #{country.headOfState}
      p.text-block.text-block__paragraph.text-block__paragraph--align-left Local Name: #{country.capital}
      p.text-block.text-block__paragraph.text-block__paragraph--align-left Local Name: #{country.countryCodeAlpha2}
    footer
