doctype html
include ../components/navbar.component.pug
html
  head
    link(rel="stylesheet", href="/css/main.css")
    title Pioneer | Cities  
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js")
    script(src="https://code.jquery.com/jquery-3.6.0.min.js")
    script.
      $(document).ready(function() {
        $('.active-row').click(function() {
          var url = $(this).data('url');
          window.location.href = url;
        });
      });

  body
    .page
      h1.page.page__heading User Database  
      table.table-sortable.content-table
        thead
          tr 
            th ID
            th Username 
            th Email 
            th User Type 
            th Edit
            th Delete 
          tr 
        tbody
          each val in users
            tr
              td #{val.ID}
              td #{val.Username}
              td #{val.Email}
              td #{val.UserType}
              td
                form(action=`user-database/edit/${val.ID}`, method="POST")
                  button.content-table__input-field.content-table__input-field--blue(type="submit")
                    i.fa-solid.fa-pen-to-square
              td 
                form(action=`user-database/delete/${val.ID}`, method="POST")
                  button.content-table__input-field.content-table__input-field--red(type="submit")
                    i.fa-solid.fa-trash