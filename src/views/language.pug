include navbar 
doctype html 
html
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    style
      include ../styles/main.css
      include ../styles/table.css
    title Pioneers | Home
  body.page  
    header
      nav.navbar
        // Your navbar content here
    section
      h2 Languages  
      table.table-content  
        thead 
          th Country Code 
          th Language 
          th Official 
          th Percentage 
        tbody
          each language in countrylanguage  
            tr.active-row(data-url=`countries/countryCode/${country.Code}`)   
              td #{countrylanguage.CountryCode}
              td #{countrylangauge.Language}
              td #{countrylanguage.IsOfficial}
              td #{countrylanguage.Percentage}
              - const population = new Intl.NumberFormat().format(countrylanguage.Population);
              td.table-row.number #{population}

    footer

  script(src="https://code.jquery.com/jquery-3.6.0.min.js")
  script.
    $(document).ready(function() {
      $('.active-row').click(function() {
        var url = $(this).data('url');
        window.location.href = url;
      });
    });